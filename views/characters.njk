{% extends "parent.njk" %}

{% block main %}
    <h1>Rick and Morty Characters</h1>
    <ul id="characters-list">
    {% for character in characters %}
            <a href="/character/{{ character.id }}">
            <li>
                <img src="{{ character.image }}" alt="{{ character.name }}">
                <p>{{ character.name }}</p>
            </li>
            </a>
        {% endfor %}
    </ul>
{% endblock %}